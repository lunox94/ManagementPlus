@page
@model ManagementPlus.Pages.Assignments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Assignment.IndividualContributorId" class="control-label"></label>
                <select asp-for="Assignment.IndividualContributorId" class ="form-control" asp-items="ViewBag.IndividualContributorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.ProjectId" class="control-label"></label>
                <select asp-for="Assignment.ProjectId" class ="form-control" asp-items="ViewBag.ProjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.DateOfFirstAssignment" class="control-label"></label>
                <input asp-for="Assignment.DateOfFirstAssignment" class="form-control" />
                <span asp-validation-for="Assignment.DateOfFirstAssignment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.DateOfLastAssignment" class="control-label"></label>
                <input asp-for="Assignment.DateOfLastAssignment" class="form-control" />
                <span asp-validation-for="Assignment.DateOfLastAssignment" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Assignment.IsActive" /> @Html.DisplayNameFor(model => model.Assignment.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
